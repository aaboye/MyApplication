<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/yellow"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:id="@+id/city_actionbar"
        android:layout_marginStart="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/textView_city_actionbar"
            android:text="北京"
            android:textSize="18dp"
            android:textColor="@color/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginStart="5dp"
            android:src="@drawable/title_home_arrow_down_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_actionbar"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/actionbar_search"
        android:layout_gravity="center"

        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="35dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/navibar_icon_search"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:text="输入商户名、地点"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ImageView
        android:id="@+id/imageAdd_action"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center"
        android:src="@drawable/home_navibar_icon_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>